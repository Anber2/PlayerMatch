<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all_screens"
    android:orientation="vertical"

    android:weightSum="1">

    <ImageButton
        android:id="@+id/floatingButton_creatGame"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/listView_ListOfGames"
        android:layout_alignEnd="@+id/listView_ListOfGames"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:background="@drawable/create2x"
        android:elevation="8dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
          />

    <ListView
        android:id="@+id/listView_ListOfGames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
         android:dividerHeight="0px"
        android:layout_weight="0.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="right"

        android:orientation="horizontal">

