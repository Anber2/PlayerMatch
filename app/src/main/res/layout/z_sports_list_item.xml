<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RelativeLayout_Sport"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView_sportsListImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/banner12x" />

        <ImageView
            android:id="@+id/imageView_arrow"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="14dp"
            android:layout_weight="0.2"
             app:srcCompat="@drawable/white_arrow2x" />

        <TextView
            android:id="@+id/textView_SportName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView_arrow"
            android:layout_toStartOf="@+id/imageView_arrow"
            android:layout_weight="0.8"
            android:gravity="bottom"
            android:padding="20dp"
            android:text="No Data"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RelativeLayout>


</LinearLayout>