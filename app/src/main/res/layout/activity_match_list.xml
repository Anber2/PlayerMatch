<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_company_list"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:orientation="vertical"

    android:weightSum="1"
    tools:context="com.mawaqaa.playermatch.Fragments.NotificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listView_selectMatchList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_noMatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/no_noti"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/button_invitePlayer_selectMatch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.1"
        android:background="@drawable/button_bg_blue"
        android:text="Invite"
        android:textAllCaps="false"
        android:textColor="#ff33b5e5" />


</LinearLayout>
