<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_all_screens"

    android:weightSum="1">


    <ListView
        android:id="@+id/listView_ListOfIndividuals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_weight="0.7" />

    <ImageButton
        android:id="@+id/floatingButton_iWantToPlay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/listView_ListOfIndividuals"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:background="@drawable/want2x"
        android:elevation="8dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="right"

        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>