<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all_screens"
    android:orientation="vertical"

    tools:context="com.mawaqaa.playermatch.Fragments.WantToPlayFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView_sportDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/football2x" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="@string/i_want_to_play"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="@string/create_select_date"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/editText_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:drawableRight="@drawable/calender_cayan"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Date"
                        android:inputType="textPersonName"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView4f"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="@string/create_select_time"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/editText_selectTime"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:drawableRight="@drawable/clock_cayan"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Time"
                        android:inputType="textPersonName"
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_postion"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/my_profile_position_played"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/spinner_postion"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_bg"

                        android:gravity="bottom" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/create_schedule"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/spinner_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_bg"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/create_location"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <!--<fragment-->
                    <!--android:id="@+id/place_autocomplete_fragment"-->
                    <!--android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="0.7"-->

                    <!--/>-->
                    <Spinner
                        android:id="@+id/spinner_location"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_bg"

                        android:gravity="bottom" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textViews"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/create_age_range"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/spinner_ageRanges"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_bg"
                        android:gravity="bottom" />

                </LinearLayout>

                <Button
                    android:id="@+id/play"

                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_blue"
                    android:padding="0dp"
                    android:text="@string/play"
                    android:textAllCaps="false"
                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
